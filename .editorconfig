root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 4

[*.conf]
indent_size = 2
tab_width = 2

[{*.bash,*.sh,*.zsh,kill_running_server}]
indent_size = 2
tab_width = 2

[{*.graphqlconfig,*.graphqlrc,*.har,*.jsb2,*.jsb3,*.json,.babelrc,.eslintrc,.prettierrc,.stylelintrc,bowerrc,jest.config}]
indent_size = 2

[{*.yaml,*.yml,.analysis_options}]
indent_size = 2

[{*.kt,*.kts}]
indent_size = 2

[pom.xml]
indent_size = 2